{
  "family": "flowfest-task",
  "networkMode": "host",  
  "requiresCompatibilities": ["EC2"],
  "cpu": "512",           
  "memory": "1024",       
  "containerDefinitions": [
    {
      "name": "flowfest-container",
      "image": "mehulsingh1010/flowfest:latest",  
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80,         
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/flowfest",
          "awslogs-region": "ap-south-1",
          "awslogs-stream-prefix": "flowfest"  
        }
      }
    }
  ]
}